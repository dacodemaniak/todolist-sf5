{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th>&nbsp;</th>
				<th>Id.</th>
				<th>Titre</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		
		<tbody>
			{% for category in categories %}
				<tr>
					<td>&nbsp;</td>
					<td>{{ category.getId() }}</td>
					<td>{{ category.getTitle() }}</td>
					<td>
						<a href="{{ path("update_category", {"id": category.getId()}) }}" title="Mettre à jour" role="button">
							Update
						</a>
						<a href="#" deleteCategory="{{ category.getId() }}" title="Supprimer" role="button">
							Delete
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
